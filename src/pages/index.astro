    <section id="service" class="service">
        <div class="service__wrapper container">
            <div class="service__intro">
                <div class="badge">services</div>
                <h2 class="service__heading">
                    Your <span class="colored-text">roofing</span> needs fully covered
                </h2>
            </div>
            <div class="service__list">
                <div class="service__tile-list">
                    {
                        services.map((service, i) => (
                            <>
                                <article class="service-item">
                                    <div class="service-item__image-wrapper">
                                        <Image
                                            class="service__item-image"
                                            src={service.thumbnail}
                                            alt={service.title}
                                        />
                                    </div>

                                    <div class="service-item__content">
