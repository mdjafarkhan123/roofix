---

<Layout>
    <section id="hero" class="hero">
        <div class="hero__bg">
            <div class="hero__bg-top">
                <picture class="hero__bg-media">
                    <source
                        media="(min-width: 1500px)"
                        srcset={heroBgDesktop.src}
                    />
                    <source
                        media="(min-width: 992px)"
                        srcset={heroBgLaptop.src}
                    />
                    <source
                        media="(min-width: 640px)"
                        srcset={heroBgTablet.src}
                    />
                    <img
                        src={heroBgMobile.src}
                        alt="Repairing roof"
                        loading="eager"
                        fetchpriority="high"
                        width={heroBgMobile.width}
                        height={heroBgMobile.height}
                    />
                </picture>
            </div>
            <div class="hero__bg-bottom"></div>
        </div>
        <div class="hero__wrapper container">
            <div class="hero__info">
                <h1 class="hero__title">Reliable roofing <br />solutions</h1>
                <div class="hero__info-group">
                    <div class="hero__image-box image-box">
                        <div class="avatar-group">
                            <figure class="img-avatar">
                                <img
                                    class="img-avatar__image"
                                    src={googleImg.src}
                                    alt="User 1 avatar"
                                    data-initial="U"
                                    onerror="this.style.display='none'"
                                    loading="eager"
                                    fetchpriority="high"
                                />
                            </figure>
                            <figure class="img-avatar">
                                <img
                                    class="img-avatar__image"
                                    src={fbImg.src}
                                    alt="User 2 avatar"
                                    data-initial="U"
                                    onerror="this.style.display='none'"
                                    loading="eager"
                                    fetchpriority="high"
                                />
                            </figure>
                            <figure class="img-avatar">
                                <img
                                    class="img-avatar__image"
                                    src={trustpilotImg.src}
                                    alt="User 3 avatar"
                                    data-initial="U"
                                    onerror="this.style.display='none'"
                                    loading="eager"
                                    fetchpriority="high"
                                />
                            </figure>
                        </div>
                        <div class="image-box__content">
                            <div class="rating">
                                <div class="rating__icon">
                                    {
                                        Array.from({ length: 5 }).map(
                                            (_, i) => (
                                                <svg
                                                    class="icon"
                                                    width="40"
                                                    height="40"
                                                >
                                                    <use xlink:href="/sprite.svg#star-fill" />
                                                </svg>
                                            )
                                        )
                                    }
                                </div>
                                5.0
                            </div>
                            <div class="description">2K+ User review</div>
                        </div>
                    </div>
                    <Button type="secondary" title="contact us" />
                </div>
            </div>
            <div class="hero__form">
                <div class="hero__form-wrapper">
                    <p class="hero__form-title">
                        Get your free roofing quote today !
                    </p>
                    <form action="" class="quote-form" method="post">
                        <div class="quote-form__row">
                            <div class="quote-form__group">
                                <label for="full_name" class="quote-form__name"
                                    >Full name</label
                                >
                                <input
                                    type="text"
                                    name="full_name"
                                    id="full_name"
                                    placeholder="Full name"
                                    required
                                    aria-required="true"
                                />
                            </div>
                        </div>
                        <div class="quote-form__row">
                            <div class="quote-form__group">
                                <label for="email" class="quote-form__email"
                                    >Email address</label
                                >
                                <input
                                    type="email"
                                    name="email_address"
                                    id="email"
                                    placeholder="Email address"
                                    required
                                    aria-required="true"
                                />
                            </div>
                            <div class="quote-form__group">
                                <label for="phone" class="quote-form__phone"
                                    >Phone number</label
                                >
                                <input
                                    type="tel"
                                    name="phone"
                                    id="phone"
                                    placeholder="Phone number"
                                    required
                                    aria-required="true"
                                />
                            </div>
                        </div>
                        <div class="quote-form__row">
                            <div class="quote-form__group">
                                <label for="service" class="quote-form__service"
                                    >Type of service</label
                                >

                                <select
                                    name="type_of_service"
                                    id="service"
                                    required
                                    aria-required="true"
                                >
                                    <option selected disabled
                                        >Type of service</option
                                    >
                                    <option value="new_fence_installation"
                                        >New fence installation</option
                                    >
                                    <option
                                        value="fence_repair_and_installation"
                                        >Fence repair & installation</option
                                    >
                                    <option value="custom_gate_installation"
                                        >Custom gate installation</option
                                    >
                                    <option value="fence_maintenance"
                                        >Fence maintenance</option
                                    >
                                    <option value="commercial_fencing"
                                        >Commercial fencing</option
                                    >
                                </select>
                            </div>
                            <div class="quote-form__group">
                                <label
                                    for="zip_code"
                                    class="quote-form__zip-code">Zip code</label
                                >
                                <input
                                    type="number"
                                    name="zip_code"
                                    id="zip_code"
                                    placeholder="Zip code"
                                    required
                                    aria-required="true"
                                />
                            </div>
                        </div>
                        <div class="quote-form__row">
                            <div class="quote-form__group">
                                <label for="address" class="quote-form__address"
                                    >Address</label
                                >
                                <input
                                    type="text"
                                    name="address"
                                    id="address"
                                    placeholder="Address"
                                    required
                                    aria-required="true"
                                    maxlength="60"
                                />
                            </div>
                        </div>
                        <div class="quote-form__row">
                            <div class="quote-form__group">
                                <label for="message" class="quote-form__message"
                                    >Email address</label
                                >
                                <textarea
                                    id="message"
                                    name="message"
                                    placeholder="Enter your message"
                                    class="quote-form__textarea"></textarea>
                            </div>
                        </div>
                        <button
                            type="submit"
                            class="btn btn--primary"
                            aria-label="Get A Quote">Get our free quote</button
                        >
                    </form>
                </div>
            </div>
        </div>
    </section>
    <section id="partner" class="partner">
